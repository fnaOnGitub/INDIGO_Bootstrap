<Window x:Class="ControlCenter.UI.Views.DocumentViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlCenter.UI.Views"
        mc:Ignorable="d"
        Title="{Binding DocumentTitle}" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource IndigoLightGrayBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Contenuto Documento -->
        <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ContentTextBlock" 
                          TextWrapping="Wrap" 
                          FontFamily="Segoe UI" 
                          FontSize="13"
                          LineHeight="22"
                          Padding="10"/>
            </ScrollViewer>
        </Border>
        
        <!-- Pulsante Chiudi -->
        <Button Grid.Row="1" 
               Content="Chiudi" 
               Click="CloseButton_Click"
               Background="{StaticResource IndigoDarkBrush}"
               Foreground="White"
               Padding="15,8"
               Margin="0,20,0,0"
               BorderThickness="0"
               HorizontalAlignment="Right"
               Cursor="Hand"/>
    </Grid>
</Window>
