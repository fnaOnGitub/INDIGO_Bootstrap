<Window x:Class="ControlCenter.UI.Views.FolderExistsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš ï¸ Cartella giÃ  esistente"
        Width="750"
        Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource ConsoleBackgroundBrush}"
        Foreground="{StaticResource ConsoleTextBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Grid.Row="0"
                   Text="âš ï¸ Attenzione: Cartella giÃ  esistente"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{StaticResource LogWarnBrush}"
                   Margin="0,0,0,20"/>

        <!-- Messaggio -->
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Foreground="{StaticResource ConsoleTextBrush}"
                   Margin="0,0,0,15">
            <Run Text="La cartella di destinazione contiene giÃ  una soluzione:"/>
        </TextBlock>

        <!-- Percorso esistente -->
        <Border Grid.Row="2"
                Background="{StaticResource ConsolePanelBrush}"
                BorderBrush="{StaticResource LogWarnBrush}"
                BorderThickness="2"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ“ Percorso:"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="{StaticResource LogWarnBrush}"
                           Margin="0,0,0,5"/>
                
                <TextBlock Grid.Row="1"
                           x:Name="ExistingPathText"
                           FontFamily="Consolas"
                           FontSize="12"
                           Foreground="{StaticResource ConsoleTextBrush}"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Nome suggerito -->
        <Border Grid.Row="3"
                Background="{StaticResource ConsolePanelBrush}"
                BorderBrush="{StaticResource AccentCyanBrush}"
                BorderThickness="2"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ’¡ Nome alternativo suggerito:"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="{StaticResource AccentCyanBrush}"
                           Margin="0,0,0,5"/>
                
                <TextBlock Grid.Row="1"
                           x:Name="SuggestedNameText"
                           FontFamily="Consolas"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{StaticResource ConsoleTextBrush}"/>
            </Grid>
        </Border>

        <!-- Domanda -->
        <TextBlock Grid.Row="4"
                   Text="Come vuoi procedere?"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource ConsoleTextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            
            <!-- Pulsante Sovrascrivi -->
            <Button x:Name="BtnOverwrite"
                    Content="ðŸ”¥ Sovrascrivi"
                    Width="140"
                    Height="40"
                    Background="{StaticResource LogErrorBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnOverwrite_Click"
                    Margin="0,0,10,0"/>

            <!-- Pulsante Usa Nome Suggerito -->
            <Button x:Name="BtnUseSuggested"
                    Content="âœ… Usa nome suggerito"
                    Width="180"
                    Height="40"
                    Background="{StaticResource AccentCyanBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnUseSuggested_Click"
                    Margin="0,0,10,0"/>

            <!-- Pulsante Nome Diverso -->
            <Button x:Name="BtnDifferentName"
                    Content="âœï¸ Scegli altro nome"
                    Width="160"
                    Height="40"
                    Background="{StaticResource LogWarnBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnDifferentName_Click"
                    Margin="0,0,10,0"/>

            <!-- Pulsante Annulla -->
            <Button x:Name="BtnCancel"
                    Content="âŒ Annulla"
                    Width="120"
                    Height="40"
                    Background="{StaticResource ConsoleTextDisabledBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
