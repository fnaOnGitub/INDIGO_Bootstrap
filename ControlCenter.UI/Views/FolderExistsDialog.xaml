<Window x:Class="ControlCenter.UI.Views.FolderExistsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="âš ï¸ Cartella giÃ  esistente"
        Width="600"
        Height="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Grid.Row="0"
                   Text="âš ï¸ Attenzione: Cartella giÃ  esistente"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FF6B35"
                   Margin="0,0,0,20"/>

        <!-- Messaggio -->
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   FontSize="14"
                   Foreground="#333"
                   Margin="0,0,0,15">
            <Run Text="La cartella di destinazione contiene giÃ  una soluzione:"/>
        </TextBlock>

        <!-- Percorso esistente -->
        <Border Grid.Row="2"
                Background="#FFF3CD"
                BorderBrush="#FFC107"
                BorderThickness="1"
                Padding="15"
                CornerRadius="5"
                Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="ðŸ“ Percorso:"
                           FontWeight="Bold"
                           FontSize="13"
                           Margin="0,0,0,5"/>
                
                <TextBlock Grid.Row="1"
                           x:Name="ExistingPathText"
                           FontFamily="Consolas"
                           FontSize="12"
                           Foreground="#856404"
                           TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Domanda -->
        <TextBlock Grid.Row="3"
                   Text="Come vuoi procedere?"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            
            <!-- Pulsante Sovrascrivi -->
            <Button x:Name="BtnOverwrite"
                    Content="ðŸ”¥ Sovrascrivi"
                    Width="140"
                    Height="40"
                    Background="#DC3545"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnOverwrite_Click"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#DC3545"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Pulsante Nome Diverso -->
            <Button x:Name="BtnDifferentName"
                    Content="âœï¸ Usa nome diverso"
                    Width="160"
                    Height="40"
                    Background="#FFC107"
                    Foreground="#333"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnDifferentName_Click"
                    Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FFC107"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0A800"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Pulsante Annulla -->
            <Button x:Name="BtnCancel"
                    Content="âŒ Annulla"
                    Width="120"
                    Height="40"
                    Background="#6C757D"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#6C757D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
