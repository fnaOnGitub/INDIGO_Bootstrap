<UserControl x:Class="ControlCenter.UI.Views.ClusterLogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{StaticResource ConsoleBackgroundBrush}">
    
    <!-- âš ï¸ Usa stili Console Theme -->
    <UserControl.Resources>
        <Style x:Key="LogEntryTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource ConsoleMonoText}">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ“Š Cluster Logs" 
                       Style="{StaticResource ConsoleTitleText}"
                       Foreground="{StaticResource AccentCyanBrush}"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Log in tempo reale degli agenti del cluster" 
                       Style="{StaticResource ConsoleLabelText}"/>
        </StackPanel>
        
        <!-- Agent Selector -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Agente:" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource ConsoleTextBrush}"
                       Margin="0,0,10,0"/>
            
            <Button x:Name="OrchestratorButton"
                    Content="ðŸŽ¯ Orchestrator" 
                    Style="{StaticResource ConsoleButton}"
                    Click="SelectAgent_Click"
                    Tag="Orchestrator"/>
            
            <Button x:Name="IndigoAiWorker01Button"
                    Content="ðŸ¤– AI Worker" 
                    Style="{StaticResource ConsoleButton}"
                    Click="SelectAgent_Click"
                    Tag="IndigoAiWorker01"/>
            
            <Button x:Name="SystemButton"
                    Content="âš™ï¸ System" 
                    Style="{StaticResource ConsoleButton}"
                    Click="SelectAgent_Click"
                    Tag="System"/>
        </StackPanel>
        
        <!-- Log Display -->
        <Border Grid.Row="2" 
                Style="{StaticResource ConsolePanelStyle}">
            <TextBox x:Name="LogTextBox"
                     Style="{StaticResource ConsoleLogTextBox}"
                     MinHeight="400"/>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">
            <Button Content="ðŸ”„ Refresh" 
                    Click="Refresh_Click"
                    Style="{StaticResource AgentButtonStyle}"
                    Background="#3B82F6"/>
            
            <Button Content="ðŸ—‘ï¸ Clear" 
                    Click="Clear_Click"
                    Style="{StaticResource AgentButtonStyle}"
                    Background="#F38BA8"/>
        </StackPanel>
    </Grid>
</UserControl>
