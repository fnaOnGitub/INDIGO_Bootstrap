<UserControl x:Class="ControlCenter.UI.Views.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlCenter.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="950">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center" MaxWidth="700">
            <!-- Logo/Titolo -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20" Padding="40">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="INDIGO LAB" 
                              FontSize="36" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource IndigoPrimaryBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Control Center" 
                              FontSize="20" 
                              Foreground="{StaticResource IndigoDarkBrush}"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Versione -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Versione" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding Version}" FontSize="14" Margin="0,0,0,5"/>
                    <TextBlock>
                        <Run Text="Build Date: " FontWeight="SemiBold"/>
                        <Run Text="{Binding BuildDate}"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Framework: " FontWeight="SemiBold"/>
                        <Run Text="{Binding FrameworkVersion}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Descrizione -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Descrizione" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap" LineHeight="22">
                        Control Center è l'interfaccia grafica per la gestione del cluster distribuito IndigoLab. 
                        Permette di orchestrare il provisioning dei server, la generazione degli agenti, 
                        la configurazione della comunicazione e il deployment del cluster completo.
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Funzionalità -->
            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Funzionalità Principali" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,10"/>
                    <StackPanel>
                        <TextBlock Text="• Provisioning remoto via PowerShell" Margin="0,5"/>
                        <TextBlock Text="• Generazione automatica agenti .NET 8" Margin="0,5"/>
                        <TextBlock Text="• Orchestrazione Docker Compose" Margin="0,5"/>
                        <TextBlock Text="• Configurazione RabbitMQ e Redis" Margin="0,5"/>
                        <TextBlock Text="• Validazione e monitoraggio cluster" Margin="0,5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Tecnologie -->
            <Border Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <TextBlock Text="Stack Tecnologico" Style="{StaticResource SubtitleTextStyle}" Margin="0,0,0,10"/>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="Frontend: " FontWeight="SemiBold"/>
                        <Run Text="WPF .NET 8, MVVM Toolkit"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                        <Run Text="Backend: " FontWeight="SemiBold"/>
                        <Run Text=".NET 8 Minimal API, Docker, PowerShell 7"/>
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap" Margin="0,5,0,0">
                        <Run Text="Infrastructure: " FontWeight="SemiBold"/>
                        <Run Text="Docker Desktop, WSL2, RabbitMQ, Redis"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
