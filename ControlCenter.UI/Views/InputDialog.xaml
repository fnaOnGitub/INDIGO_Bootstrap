<Window x:Class="ControlCenter.UI.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input"
        Width="500"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource ConsoleBackgroundBrush}"
        Foreground="{StaticResource ConsoleTextBrush}">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titolo -->
        <TextBlock Grid.Row="0"
                   x:Name="TitleText"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="{StaticResource ConsoleTextBrush}"
                   Margin="0,0,0,15"/>

        <!-- Label -->
        <TextBlock Grid.Row="1"
                   x:Name="LabelText"
                   FontSize="14"
                   Foreground="{StaticResource ConsoleTextSecondaryBrush}"
                   Margin="0,0,0,10"/>

        <!-- Input -->
        <TextBox Grid.Row="2"
                 x:Name="InputTextBox"
                 FontSize="14"
                 Padding="10"
                 Background="{StaticResource ConsolePanelBrush}"
                 Foreground="{StaticResource ConsoleTextBrush}"
                 BorderBrush="{StaticResource ConsoleBorderBrush}"
                 BorderThickness="1"
                 Margin="0,0,0,20"
                 KeyDown="InputTextBox_KeyDown"
                 CaretBrush="{StaticResource AccentCyanBrush}"/>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            
            <Button x:Name="BtnOK"
                    Content="✅ OK"
                    Width="100"
                    Height="36"
                    Background="{StaticResource AccentCyanBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnOK_Click"
                    Margin="0,0,10,0"/>

            <Button x:Name="BtnCancel"
                    Content="❌ Annulla"
                    Width="100"
                    Height="36"
                    Background="{StaticResource ConsoleTextDisabledBrush}"
                    Foreground="{StaticResource ConsoleBackgroundBrush}"
                    FontSize="14"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
