<Window x:Class="ControlCenter.UI.Views.NaturalLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ControlCenter.UI.ViewModels"
        xmlns:converters="clr-namespace:ControlCenter.UI.Converters"
        mc:Ignorable="d"
        Title="IndigoLab Natural Language Console" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource ConsoleBackgroundBrush}">

    <Window.DataContext>
        <vm:NaturalLanguageViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <converters:StepTypeToColorConverter x:Key="StepTypeToColorConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:LogLevelToBrushConverter x:Key="LogLevelToBrushConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Stile per card moderne - CONSOLE THEME LEGGIBILE -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource ConsolePanelBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource ConsoleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Stile per pulsante principale - CONSOLE THEME -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ConsoleButtonOrange}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="32,16"/>
        </Style>

        <!-- Stile per timeline step - TRASPARENTE E LEGGIBILE -->
        <Style x:Key="TimelineStepStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource ConsoleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header - CONSOLE THEME -->
        <Border Background="{StaticResource ConsolePanelBrush}" 
                BorderBrush="{StaticResource ConsoleBorderBrush}"
                BorderThickness="0,0,0,1"
                Height="70" 
                VerticalAlignment="Top">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ§  IndigoLab Natural Language Console" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Scrivi in linguaggio naturale e lascia che il cluster faccia il resto" 
                               FontSize="12" 
                               Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Stato Orchestrator - CONSOLE THEME -->
                <Border Grid.Column="1" 
                        Background="{StaticResource ConsolePanelAltBrush}" 
                        BorderBrush="{StaticResource ConsoleBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4" 
                        Padding="16,8" 
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš¡ Orchestrator:" 
                                   FontSize="12" 
                                   Foreground="White" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding OrchestratorStatus}" 
                                   FontSize="12" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                        
                        <!-- Pulsanti azioni -->
                        <Button Content="ðŸ”„" 
                                Command="{Binding RestartOrchestratorCommand}"
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Cursor="Hand" 
                                FontSize="14" 
                                Padding="8,4" 
                                Margin="8,0,0,0"
                                ToolTip="Riavvia Orchestrator"/>
                        
                        <Button Content="ðŸ“" 
                                Command="{Binding OpenOrchestratorFolderCommand}"
                                Background="Transparent" 
                                Foreground="White" 
                                BorderThickness="0" 
                                Cursor="Hand" 
                                FontSize="14" 
                                Padding="8,4" 
                                Margin="4,0,0,0"
                                ToolTip="Apri cartella Orchestrator"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,70,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Pannello Sinistro: Input + Stato Corrente - BLU + CIANO -->
            <Border Grid.Column="0" 
                    Background="{StaticResource ConsolePanelBrush}" 
                    Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Titolo Sezione -->
                    <TextBlock Grid.Row="0" 
                               Text="Cosa vuoi che faccia il cluster?" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource ConsoleTextBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Input Box Naturale -->
                    <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBox Grid.Row="0"
                                     Text="{Binding UserInput, UpdateSourceTrigger=PropertyChanged}"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     FontSize="16"
                                     BorderThickness="0"
                                     Padding="12"
                                     Background="Transparent"
                                     Foreground="{StaticResource ConsoleTextBrush}"
                                     CaretBrush="{StaticResource AccentCyanBrush}"
                                     MinHeight="150"
                                     MaxHeight="300">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Top">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Esempio:&#x0a;â€¢ Crea un dashboard WPF con grafici real-time&#x0a;â€¢ Genera un'API REST per gestione utenti&#x0a;â€¢ Ottimizza le query del database&#x0a;â€¢ Analizza i log degli ultimi 30 giorni" 
                                                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                                                          FontSize="14" 
                                                                          Padding="12"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Pulsante Esegui -->
                            <Button Grid.Row="1" 
                                    Content="ðŸš€ Esegui" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding ExecuteCommand}"
                                    IsEnabled="{Binding IsExecuting, Converter={StaticResource InverseBoolConverter}}"
                                    Margin="0,16,0,0"
                                    HorizontalAlignment="Stretch"/>
                        </Grid>
                    </Border>

                    <!-- Pannello "Cosa sta succedendo ora" -->
                    <Border Grid.Row="2" 
                            Style="{StaticResource CardStyle}"
                            Visibility="{Binding HasCurrentStep, Converter={StaticResource BoolToVisibility}}"
                            BorderBrush="#00BCD4" 
                            BorderThickness="2"
                            Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icona animata -->
                            <Ellipse Grid.Column="0" 
                                     Width="40" 
                                     Height="40" 
                                     Fill="#00BCD4" 
                                     Margin="0,0,16,0">
                                <Ellipse.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard RepeatBehavior="Forever">
                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                               From="1" To="0.3" Duration="0:0:1"
                                                               AutoReverse="True"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Ellipse.Triggers>
                            </Ellipse>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="ðŸ”„ Cosa sta succedendo ora" 
                                          FontSize="12" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource AccentCyanBrush}" 
                                          Margin="0,0,0,6"/>
                                <TextBlock Text="{Binding CurrentStepTitle}" 
                                          FontSize="16" 
                                          FontWeight="SemiBold" 
                                          Foreground="{StaticResource ConsoleTextBrush}" 
                                          TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding CurrentStepDescription}" 
                                          FontSize="13" 
                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                          TextWrapping="Wrap" 
                                          Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pannello dettagli Orchestrator -->
                    <Border Grid.Row="3" 
                            Style="{StaticResource CardStyle}"
                            BorderBrush="{Binding IsOrchestratorOnline, Converter={StaticResource BoolToColorConverter}}" 
                            BorderThickness="2"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="âš™ï¸ Stato Orchestrator" 
                                      FontSize="14" 
                                      FontWeight="SemiBold" 
                                      Foreground="{StaticResource ConsoleTextBrush}" 
                                      Margin="0,0,0,12"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="Stato:" 
                                          FontSize="12" 
                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                          Margin="0,0,8,6"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                          Text="{Binding OrchestratorStatus}" 
                                          FontSize="12" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,6"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="Porta:" 
                                          FontSize="12" 
                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                          Margin="0,0,8,6"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                          Text="{Binding OrchestratorPort}" 
                                          FontSize="12" 
                                          Margin="0,0,0,6"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="Risposta:" 
                                          FontSize="12" 
                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                          Margin="0,0,8,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                          Text="{Binding OrchestratorResponseTime}" 
                                          FontSize="12"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Pannello Log in Tempo Reale -->
                    <Expander Grid.Row="4" 
                              Header="ðŸ“Š Log Cluster (Tempo Reale)" 
                              IsExpanded="True"
                              Margin="0,0,0,12">
                        <Expander.HeaderTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0"
                                              Text="{Binding}" 
                                              FontSize="14" 
                                              FontWeight="SemiBold" 
                                              Foreground="{StaticResource AccentCyanBrush}"/>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <Ellipse Width="8" Height="8" 
                                                Fill="#10B981" 
                                                Margin="8,0,0,0"
                                                ToolTip="Aggiornamento automatico attivo">
                                            <Ellipse.Triggers>
                                                <EventTrigger RoutedEvent="Loaded">
                                                    <BeginStoryboard>
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                           From="1" To="0.2" Duration="0:0:1.5"
                                                                           AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger>
                                            </Ellipse.Triggers>
                                        </Ellipse>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </Expander.HeaderTemplate>
                        <Border Background="#1E1E2E" 
                                CornerRadius="6" 
                                BorderBrush="#313244"
                                BorderThickness="1"
                                Margin="0,8,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Selettore agente -->
                                <Border Grid.Row="0" 
                                       Background="#181825"
                                       Padding="8">
                                    <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Agente:" 
                                              Foreground="#CDD6F4" 
                                              FontSize="11"
                                              VerticalAlignment="Center"
                                              Margin="0,0,8,0"/>
                                    <Button x:Name="BtnLogSystem"
                                           Content="System" 
                                           Click="SelectLogAgent_Click"
                                           Tag="System"
                                           Background="#6366F1"
                                           Foreground="White"
                                           Padding="8,4"
                                           Margin="2"
                                           FontSize="10"
                                           BorderThickness="0"
                                           Cursor="Hand"/>
                                    <Button x:Name="BtnLogOrchestrator"
                                           Content="Orchestrator" 
                                           Click="SelectLogAgent_Click"
                                           Tag="Orchestrator"
                                           Background="#313244"
                                           Foreground="#CDD6F4"
                                           Padding="8,4"
                                           Margin="2"
                                           FontSize="10"
                                           BorderThickness="0"
                                           Cursor="Hand"/>
                                    <Button x:Name="BtnLogAiWorker"
                                           Content="AI Worker" 
                                           Click="SelectLogAgent_Click"
                                           Tag="IndigoAiWorker01"
                                           Background="#313244"
                                           Foreground="#CDD6F4"
                                           Padding="8,4"
                                           Margin="2"
                                           FontSize="10"
                                           BorderThickness="0"
                                           Cursor="Hand"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Area log -->
                                <TextBox Grid.Row="1"
                                        x:Name="LogTextBox"
                                        IsReadOnly="True"
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Auto"
                                        AcceptsReturn="True"
                                        IsReadOnlyCaretVisible="True"
                                        FontFamily="Consolas"
                                        FontSize="11"
                                        Background="#1E1E2E"
                                        Foreground="#CDD6F4"
                                        BorderThickness="0"
                                        Padding="8"
                                        MinHeight="250"
                                        MaxHeight="400"
                                        Margin="8"/>
                            </Grid>
                        </Border>
                    </Expander>
                    
                    <!-- Stato generale -->
                    <Border Grid.Row="5" 
                            Background="#F9F9F9" 
                            Padding="16" 
                            CornerRadius="8"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                       Text="âš¡" 
                                       FontSize="16" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding CurrentStatus}" 
                                       FontSize="14" 
                                       Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                       VerticalAlignment="Center"/>

                            <!-- Pulsante Clear Timeline -->
                            <Button Grid.Column="2" 
                                    Content="ðŸ—‘ï¸ Pulisci" 
                                    Command="{Binding ClearTimelineCommand}"
                                    Background="Transparent" 
                                    Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                    BorderThickness="0" 
                                    Cursor="Hand" 
                                    Padding="8,4"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Pannello Destro: Timeline - BLU COME SINISTRA -->
            <Border Grid.Column="1" 
                    Background="{StaticResource ConsolePanelBrush}" 
                    Padding="30">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Titolo Timeline -->
                    <TextBlock Grid.Row="0" 
                               Text="ðŸ“Š Timeline Operativa" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource ConsoleTextBrush}"
                               Margin="0,0,0,20"/>

                    <!-- Timeline Steps -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding TimelineSteps}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource TimelineStepStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Contenuto step - SENZA CERCHI -->
                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}" 
                                                          FontSize="15" 
                                                          FontWeight="SemiBold" 
                                                          Foreground="{StaticResource ConsoleTextBrush}"/>
                                                <TextBlock Text="{Binding Description}" 
                                                          FontSize="13" 
                                                          Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                                          TextWrapping="Wrap" 
                                                          Margin="0,4,0,0"/>
                                            </StackPanel>

                                            <!-- Timestamp -->
                                            <TextBlock Grid.Column="1" 
                                                      Text="{Binding FormattedTime}" 
                                                      FontSize="12" 
                                                      Foreground="{StaticResource ConsoleTextSecondaryBrush}" 
                                                      VerticalAlignment="Top"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
