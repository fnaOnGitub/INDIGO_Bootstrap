<Window x:Class="ControlCenter.UI.Views.ExplainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ’¬ ModalitÃ  Explain" 
        Height="650" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2E"
        Foreground="White"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Style per i titoli delle sezioni -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#CDD6F4"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>
        
        <!-- Style per il testo normale -->
        <Style x:Key="NormalTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#BAC2DE"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="22"/>
        </Style>
        
        <!-- Style per il pulsante -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’¬ ModalitÃ  Explain" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#89DCEB"
                       Margin="0,0,0,10"/>
            <TextBlock Text="Comprendi perchÃ© il sistema sta facendo questa azione" 
                       FontSize="13" 
                       Foreground="#BAC2DE"
                       TextWrapping="Wrap"/>
        </StackPanel>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="0,0,0,20">
            <StackPanel>
                <!-- Spiegazione narrativa -->
                <TextBlock Text="ðŸ“– Spiegazione" 
                           Style="{StaticResource SectionTitleStyle}"/>
                <Border Background="#181825" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="NarrativeTextBlock" 
                               Style="{StaticResource NormalTextStyle}"/>
                </Border>
                
                <!-- Motivazione tecnica -->
                <TextBlock Text="ðŸ”§ Motivazione tecnica" 
                           Style="{StaticResource SectionTitleStyle}"/>
                <Border Background="#181825" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="TechnicalReasonTextBlock" 
                               Style="{StaticResource NormalTextStyle}"/>
                </Border>
                
                <!-- Dipendenze -->
                <TextBlock Text="ðŸ”— Dipendenze" 
                           Style="{StaticResource SectionTitleStyle}"/>
                <Border Background="#181825" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,10">
                    <TextBlock x:Name="DependenciesTextBlock" 
                               Style="{StaticResource NormalTextStyle}"/>
                </Border>
                
                <!-- Impatto -->
                <TextBlock Text="âš¡ Impatto" 
                           Style="{StaticResource SectionTitleStyle}"/>
                <Border Background="#181825" 
                        CornerRadius="8" 
                        Padding="15"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Se confermi:" 
                                   Foreground="#A6E3A1"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <TextBlock x:Name="ImpactConfirmTextBlock" 
                                   Style="{StaticResource NormalTextStyle}"
                                   Margin="10,0,0,10"/>
                        
                        <TextBlock Text="Se annulli:" 
                                   Foreground="#F38BA8"
                                   FontWeight="SemiBold"
                                   Margin="0,10,0,5"/>
                        <TextBlock x:Name="ImpactCancelTextBlock" 
                                   Style="{StaticResource NormalTextStyle}"
                                   Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Alternative possibili -->
                <Expander Header="ðŸ”€ Alternative possibili" 
                          Foreground="#BAC2DE"
                          Margin="0,15,0,0"
                          FontSize="14">
                    <Border Background="#181825" 
                            CornerRadius="8" 
                            Padding="15"
                            Margin="0,10,0,0">
                        <TextBlock x:Name="AlternativesTextBlock" 
                                   Style="{StaticResource NormalTextStyle}"/>
                    </Border>
                </Expander>
                
                <!-- Dettagli tecnici completi (collassabile) -->
                <Expander Header="ðŸ“š Dettagli tecnici completi" 
                          Foreground="#BAC2DE"
                          Margin="0,10,0,0"
                          FontSize="14">
                    <Border Background="#181825" 
                            CornerRadius="8" 
                            Padding="15"
                            Margin="0,10,0,0">
                        <TextBlock x:Name="FullTechnicalDetailsTextBlock" 
                                   FontFamily="Consolas" 
                                   FontSize="11"
                                   Foreground="#A6ADC8"
                                   TextWrapping="Wrap"/>
                    </Border>
                </Expander>
                
                <!-- Nota modalitÃ  explain -->
                <Border Background="#313244" 
                        CornerRadius="8" 
                        Padding="12"
                        Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¡" 
                                   FontSize="16"
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="ModalitÃ  Explain attiva - Ogni azione Ã¨ spiegata e motivata" 
                                   FontSize="12"
                                   Foreground="#F9E2AF"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Action Button -->
        <Grid Grid.Row="2">
            <Button Content="âœ… Ho capito" 
                    Background="#89B4FA" 
                    Foreground="#1E1E2E"
                    Style="{StaticResource ButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="Ok_Click"/>
        </Grid>
    </Grid>
</Window>
