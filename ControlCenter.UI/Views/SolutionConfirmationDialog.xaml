<Window x:Class="ControlCenter.UI.Views.SolutionConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conferma Operazione"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#4B0082" 
                Padding="20" 
                CornerRadius="8" 
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="âš ï¸ Conferma Operazione" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Il sistema ha rilevato una richiesta di creazione soluzione" 
                           FontSize="12" 
                           Foreground="#E0E0E0" 
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- FunzionalitÃ  Previste -->
                <Border Background="White" 
                        Padding="16" 
                        CornerRadius="8" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ FunzionalitÃ  Previste" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333" 
                                   Margin="0,0,0,12"/>
                        <ItemsControl x:Name="FeaturesListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="âœ…" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding}" 
                                                   FontSize="14" 
                                                   Foreground="#666" 
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Struttura Proposta -->
                <Border Background="White" 
                        Padding="16" 
                        CornerRadius="8" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="ðŸ—ï¸ Struttura Proposta" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333" 
                                   Margin="0,0,0,12"/>
                        <Border Background="#F9F9F9" 
                                Padding="12" 
                                CornerRadius="4" 
                                BorderBrush="#E0E0E0" 
                                BorderThickness="1">
                            <TextBlock x:Name="StructureTextBlock" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       Foreground="#333" 
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Moduli -->
                <Border Background="White" 
                        Padding="16" 
                        CornerRadius="8" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ðŸ“¦ Moduli Previsti" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#333" 
                                   Margin="0,0,0,12"/>
                        <ItemsControl x:Name="ModulesListBox">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                               FontSize="14" 
                                               Foreground="#666" 
                                               TextWrapping="Wrap" 
                                               Margin="0,0,0,8"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Pulsante Explain -->
            <Button Grid.Row="0"
                    Content="â“ PerchÃ© sto facendo questo?" 
                    Click="Explain_Click"
                    Background="#89DCEB" 
                    Foreground="#1E1E2E" 
                    FontSize="13" 
                    FontWeight="SemiBold" 
                    Padding="15,10" 
                    Cursor="Hand"
                    BorderThickness="0"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,15"
                    ToolTip="Spiega perchÃ© il sistema sta proponendo questa azione">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#74C7DC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Action Buttons -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" 
                    Content="âŒ Annulla" 
                    Click="Cancel_Click"
                    Background="#95A5A6" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold" 
                    Padding="20,12" 
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="0,0,12,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1" 
                    Content="âž• Aggiungi alla Soluzione Corrente" 
                    Click="AddToCurrent_Click"
                    Background="#3498DB" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold" 
                    Padding="20,12" 
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="0,0,12,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2980B9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2" 
                    Content="âœ¨ Crea Nuova Soluzione" 
                    Click="CreateNew_Click"
                    Background="#4B0082" 
                    Foreground="White" 
                    FontSize="14" 
                    FontWeight="SemiBold" 
                    Padding="20,12" 
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="8" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5B1092"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
