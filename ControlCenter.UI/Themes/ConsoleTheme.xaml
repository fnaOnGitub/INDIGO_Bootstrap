<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================
         INDIGOLAB CONSOLE THEME
         Palette tecnica moderna per Control Center
         ======================================== -->

    <!-- COLORI BASE CONSOLE - BLU SCURO + CIANO -->
    <Color x:Key="ConsoleBackground">#0A1628</Color>
    <Color x:Key="ConsolePanel">#0F2942</Color>
    <Color x:Key="ConsolePanelAlt">#1A3A5C</Color>
    <Color x:Key="ConsoleBorder">#2C5282</Color>
    <Color x:Key="ConsoleBorderLight">#3B6BA8</Color>

    <!-- TESTO - CIANO LEGGIBILE -->
    <Color x:Key="ConsoleText">#00E5FF</Color>
    <Color x:Key="ConsoleTextSecondary">#80F2FF</Color>
    <Color x:Key="ConsoleTextDisabled">#4DD0E1</Color>

    <!-- ACCENTI PRINCIPALI (NO VIOLA!) -->
    <Color x:Key="AccentCyan">#06B6D4</Color>
    <Color x:Key="AccentCyanHover">#0891B2</Color>
    <Color x:Key="AccentOrange">#F97316</Color>
    <Color x:Key="AccentOrangeHover">#EA580C</Color>

    <!-- LOG LEVELS -->
    <Color x:Key="LogInfo">#A5F3FC</Color>
    <Color x:Key="LogDebug">#6EE7B7</Color>
    <Color x:Key="LogWarn">#FBBF24</Color>
    <Color x:Key="LogError">#F87171</Color>

    <!-- STATI -->
    <Color x:Key="StatusRunning">#10B981</Color>
    <Color x:Key="StatusStarting">#FBBF24</Color>
    <Color x:Key="StatusCrashed">#EF4444</Color>
    <Color x:Key="StatusStopped">#6B7280</Color>

    <!-- BRUSHES -->
    <SolidColorBrush x:Key="ConsoleBackgroundBrush" Color="{StaticResource ConsoleBackground}"/>
    <SolidColorBrush x:Key="ConsolePanelBrush" Color="{StaticResource ConsolePanel}"/>
    <SolidColorBrush x:Key="ConsolePanelAltBrush" Color="{StaticResource ConsolePanelAlt}"/>
    <SolidColorBrush x:Key="ConsoleBorderBrush" Color="{StaticResource ConsoleBorder}"/>
    <SolidColorBrush x:Key="ConsoleBorderLightBrush" Color="{StaticResource ConsoleBorderLight}"/>

    <SolidColorBrush x:Key="ConsoleTextBrush" Color="{StaticResource ConsoleText}"/>
    <SolidColorBrush x:Key="ConsoleTextSecondaryBrush" Color="{StaticResource ConsoleTextSecondary}"/>
    <SolidColorBrush x:Key="ConsoleTextDisabledBrush" Color="{StaticResource ConsoleTextDisabled}"/>

    <SolidColorBrush x:Key="AccentCyanBrush" Color="{StaticResource AccentCyan}"/>
    <SolidColorBrush x:Key="AccentOrangeBrush" Color="{StaticResource AccentOrange}"/>

    <SolidColorBrush x:Key="LogInfoBrush" Color="{StaticResource LogInfo}"/>
    <SolidColorBrush x:Key="LogDebugBrush" Color="{StaticResource LogDebug}"/>
    <SolidColorBrush x:Key="LogWarnBrush" Color="{StaticResource LogWarn}"/>
    <SolidColorBrush x:Key="LogErrorBrush" Color="{StaticResource LogError}"/>

    <!-- ========================================
         STILI COMPONENTI
         ======================================== -->

    <!-- PANNELLO CONSOLE - LEGGIBILE -->
    <Style x:Key="ConsolePanelStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ConsolePanelBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ConsoleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
    </Style>
    
    <!-- PANNELLO TRASPARENTE PER TESTO -->
    <Style x:Key="TransparentPanelStyle" TargetType="Border">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- PANNELLO CONSOLE ALTERNATIVO -->
    <Style x:Key="ConsolePanelAltStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource ConsolePanelAltBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ConsoleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <!-- PULSANTE CONSOLE (OUTLINE CYAN) - LEGGIBILE -->
    <Style x:Key="ConsoleButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource AccentCyanBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextBrush}"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#0891B2"/>
                            <Setter Property="BorderBrush" Value="#0891B2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#0E7490"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- PULSANTE CONSOLE ARANCIONE -->
    <Style x:Key="ConsoleButtonOrange" TargetType="Button" BasedOn="{StaticResource ConsoleButton}">
        <Setter Property="BorderBrush" Value="{StaticResource AccentOrangeBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#EA580C"/>
                            <Setter Property="BorderBrush" Value="#EA580C"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#C2410C"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TEXTBOX CONSOLE -->
    <Style x:Key="ConsoleTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource ConsolePanelBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource ConsoleBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="CaretBrush" Value="{StaticResource AccentCyanBrush}"/>
    </Style>

    <!-- TEXTBOX LOG (MONOSPAZIATO) - LEGGIBILE -->
    <Style x:Key="ConsoleLogTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#121212"/>
        <Setter Property="Foreground" Value="#E5E7EB"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="FontFamily" Value="Cascadia Code, JetBrains Mono, Consolas"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        <Setter Property="AcceptsReturn" Value="True"/>
        <Setter Property="IsReadOnlyCaretVisible" Value="True"/>
        <Setter Property="CaretBrush" Value="{StaticResource AccentCyanBrush}"/>
    </Style>

    <!-- TEXTBLOCK TITOLO -->
    <Style x:Key="ConsoleTitleText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextBrush}"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- TEXTBLOCK LABEL -->
    <Style x:Key="ConsoleLabelText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextSecondaryBrush}"/>
        <Setter Property="FontFamily" Value="Inter, Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- TEXTBLOCK MONOSPACE -->
    <Style x:Key="ConsoleMonoText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource ConsoleTextBrush}"/>
        <Setter Property="FontFamily" Value="Cascadia Code, JetBrains Mono, Consolas"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- SCROLL VIEWER CONSOLE -->
    <Style x:Key="ConsoleScrollViewer" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    </Style>

</ResourceDictionary>
