<Application x:Class="ControlCenter.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ControlCenter.UI"
             xmlns:converters="clr-namespace:ControlCenter.UI.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <converters:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
        
        <!-- Colori IndigoLab -->
        <SolidColorBrush x:Key="IndigoPrimaryBrush" Color="#4B0082"/>
        <SolidColorBrush x:Key="IndigoDarkBrush" Color="#2E004F"/>
        <SolidColorBrush x:Key="IndigoLightGrayBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="IndigoWhiteBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="IndigoOrangeBrush" Color="#FF7A00"/>
        <SolidColorBrush x:Key="IndigoCyanBrush" Color="#00B7C3"/>
        
        <!-- Stili Base -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource IndigoPrimaryBrush}"/>
        </Style>
        
        <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="{StaticResource IndigoDarkBrush}"/>
        </Style>
        
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource IndigoWhiteBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource IndigoDarkBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </Application.Resources>
</Application>
